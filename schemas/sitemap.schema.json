{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://registry.aesynth.ai/schemas/sitemap.schema.json",
  "title": "Registry Sitemap",
  "type": "object",
  "required": [
    "root",
    "sections"
  ],
  "additionalProperties": false,
  "properties": {
    "root": {
      "type": "string"
    },
    "sections": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "label",
          "items"
        ],
        "additionalProperties": false,
        "properties": {
          "label": {
            "type": "string"
          },
          "items": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "title",
                "path"
              ],
              "additionalProperties": false,
              "properties": {
                "title": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
