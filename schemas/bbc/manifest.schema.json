{
  "$id": "https://aesynth.org/schemas/bbc/manifest.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Baseline Building Code Repo Manifest",
  "type": "object",
  "required": ["policy_id", "pack_id", "source_repo", "surfaces", "last_certified", "risk"],
  "properties": {
    "policy_id": { "type": "string", "enum": ["BBC-001"] },
    "pack_id": { "type": "string", "pattern": "^[a-z0-9-]+$" },
    "source_repo": { "type": "string" },
    "contact": { "type": "string" },
    "last_certified": { "type": "string", "format": "date-time" },
    "risk": {
      "type": "object",
      "required": ["tier", "change_window_hours"],
      "properties": {
        "tier": { "type": "integer", "minimum": 1, "maximum": 5 },
        "change_window_hours": { "type": "integer", "minimum": 1, "maximum": 72 },
        "notes": { "type": "string" }
      }
    },
    "surfaces": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["name", "artifact", "outputs"],
        "properties": {
          "name": { "type": "string" },
          "artifact": { "type": "string" },
          "outputs": {
            "type": "array",
            "items": { "type": "string", "enum": ["geometry", "plan", "assembly", "report"] }
          },
          "safety_owner": { "type": "string" }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
