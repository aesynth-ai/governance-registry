{
  "$id": "https://aesynth.org/schemas/policy.schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Aesynth Policy Object",
  "type": "object",
  "required": [
    "id",
    "version",
    "status",
    "class",
    "title",
    "jurisdiction",
    "bindings",
    "scope",
    "procedures",
    "controls",
    "provenance",
    "signatures",
    "hash"
  ],
  "properties": {
    "id": { "type": "string", "pattern": "^[A-Z0-9._-]+$" },
    "version": { "type": "string", "pattern": "^\\d+\\.\\d+\\.\\d+$" },
    "status": { "type": "string", "enum": ["active", "deprecated", "draft"] },
    "class": {
      "type": "string",
      "enum": ["governance", "security", "ethics", "ip", "audit", "compliance"]
    },
    "title": { "type": "string", "minLength": 3 },
    "summary": { "type": "string" },
    "jurisdiction": {
      "type": "object",
      "required": ["registry", "precedence"],
      "properties": {
        "registry": {
          "type": "string",
          "enum": ["governance-registry", "policy-registry"]
        },
        "precedence": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "TechnicalMonographs",
              "AIConstitution",
              "HumanConstitution",
              "SemanticCharter",
              "SystemSpecification"
            ]
          }
        }
      }
    },
    "bindings": {
      "type": "object",
      "required": ["constitution_hash", "spec_hash"],
      "properties": {
        "constitution_hash": { "type": "string" },
        "spec_hash": { "type": "string" },
        "related_addendums": {
          "type": "array",
          "items": { "type": "string", "pattern": "^A-\\d+(\\.v\\d+\\.\\d+\\.\\d+)?$" }
        }
      }
    },
    "scope": {
      "type": "object",
      "required": ["applies_to", "exclusions"],
      "properties": {
        "applies_to": { "type": "array", "items": { "type": "string" } },
        "exclusions": { "type": "array", "items": { "type": "string" } }
      }
    },
    "procedures": {
      "type": "object",
      "required": ["enactment", "amendment", "repeal"],
      "properties": {
        "enactment": { "type": "string" },
        "amendment": { "type": "string" },
        "repeal": { "type": "string" }
      }
    },
    "controls": {
      "type": "object",
      "required": ["ci_checks", "evidence_required"],
      "properties": {
        "ci_checks": { "type": "array", "items": { "type": "string" } },
        "evidence_required": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["CRR", "ProvenanceEnvelope", "LedgerEntry", "AuditReport"]
          }
        }
      }
    },
    "references": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label", "uri", "hash"],
        "properties": {
          "label": { "type": "string" },
          "uri": { "type": "string" },
          "hash": { "type": "string" }
        }
      }
    },
    "provenance": {
      "type": "object",
      "required": ["created_at", "updated_at", "author", "reviewers"],
      "properties": {
        "created_at": { "type": "string", "format": "date-time" },
        "updated_at": { "type": "string", "format": "date-time" },
        "author": { "type": "string" },
        "reviewers": { "type": "array", "items": { "type": "string" } },
        "crr_id": { "type": "string" },
        "ledger_ref": { "type": "string" }
      }
    },
    "signatures": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["signer", "algo", "signature", "timestamp"],
        "properties": {
          "signer": { "type": "string" },
          "algo": { "type": "string", "enum": ["ed25519", "ecdsa-p256"] },
          "signature": { "type": "string" },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      }
    },
    "hash": { "type": "string" },
    "i18n": {
      "type": "object",
      "properties": {
        "label": { "type": "object", "additionalProperties": { "type": "string" } },
        "description": { "type": "object", "additionalProperties": { "type": "string" } }
      }
    }
  },
  "additionalProperties": false
}
